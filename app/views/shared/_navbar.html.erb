<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%#= image_tag "https://vectr.com/tmp/a3hNd12XA6/b1TdWiwIT0.svg?width=447.21264367816116&height=86.20689655172416&select=edBap2YJr&source=selection" %>
    <h1>Works4Me.</h1>

    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item active">
          <%= link_to "My Tasks", my_tasks_path, class: "nav-link" %>
        </li>

        <li class="nav-item active">
          <%= link_to "Profile", profile_path, class: "nav-link" %>
        </li>

        <li class="nav-item active">
          <%= link_to "About", root_path, class: "nav-link" %>
        </li>
<!--         <li class="nav-item active">
          <%= link_to "Faq", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Contacts", root_path, class: "nav-link" %>
        </li> -->

         <% unless current_user.nil? %>
        <li class="nav-item active nav-link">
          <%= current_user.first_name %>
        <% end %>
        </li>

        <li class="nav-item dropdown">

          <% if current_user.avatar.present? %>

            <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <% else %>

            <%= image_tag "https://picsum.photos/200/200/?random", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>

        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>



