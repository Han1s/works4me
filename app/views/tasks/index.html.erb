<% @tasks.each do |task| %>
<p><%= task.name %></p>
<p>Amount: <%= humanized_money_with_symbol(task.price) %></p>
<p><%= task.status %></p>
<p><%= task.owner.first_name %></p>

<% end %>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
