
<% @tasks.each do |task| %>
  <p><%= link_to "Name : #{task.name}",task_path(task.id) %></p>
  <p>Price: <%= task.price %></p>
  <p>Status: <%= task.status %></p>
  <p>Owner: <%= task.owner.first_name %></p>


  <hr>
<% end %>

<div
  id="map"
  style="width: 800px;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


